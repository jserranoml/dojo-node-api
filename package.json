{
  "name": "dojo-node-crud",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=production npm run ts:build",
    "start-dev": "nodemon --exec ts-node -T src/index.ts",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest --verbose --coverage",
    "build": "NODE_ENV=development tsc -p tsconfig.build.json",
    "debug": "nodemon --inspect --inspect-brk src/index.ts",
    "lint": "eslint  src/** tests/**",
    "ts:build": "tsc -p tsconfig.build.json && node ./build/index.js",
    "lint:fix": "eslint --fix src/**/*.ts",
    "prettier": "prettier --write .",
    "pretty-quick": "pretty-quick"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jserranoml/dojo-node-api.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "config": "^3.3.7",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/joi": "^17.2.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.2",
    "nock": "^13.2.6",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
